{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "es5", "es6", "dom"],
    "skipLibCheck": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "isolatedModules": true,
    "baseUrl": "./",
    "outDir": "./.tmp",
    "rootDir": "./src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true
  }
}
